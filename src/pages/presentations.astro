---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

const presentations = [
  {
    title: 'Introduction to GitHub Copilot in Visual Studio',
    description: '11-slide overview covering all major features, keyboard shortcuts, and demo talking points',
    path: `${base}presentations/intro.html`,
    slides: 11,
    icon: 'ðŸŽ¯'
  }
];
---

<BaseLayout title="Presentations | Copilot Visual Studio Guide">
  <main class="max-w-5xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-heading font-bold text-center mb-4 gradient-text">Presentations</h1>
    <p class="text-center text-text-secondary mb-12">Slideshow presentations for customer demos and training</p>
    
    <div class="grid gap-6 md:grid-cols-2">
      {presentations.map(p => (
        <a 
          href={p.path} 
          target="_blank"
          class="block p-6 rounded-xl bg-bg-surface border border-border-default hover:border-accent-cyan transition-all group"
        >
          <div class="text-4xl mb-4">{p.icon}</div>
          <h2 class="text-xl font-semibold text-accent-cyan mb-2 group-hover:text-accent-violet transition-colors">{p.title}</h2>
          <p class="text-text-secondary mb-4">{p.description}</p>
          <div class="text-sm text-text-muted">{p.slides} slides â€¢ Click to launch</div>
        </a>
      ))}
    </div>
  </main>
</BaseLayout>
