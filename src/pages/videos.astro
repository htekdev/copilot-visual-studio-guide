---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const videos = await getCollection('videos');
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

// Define pillars with metadata - ordered as learning path
const pillars = [
  { id: 'getting-started', name: 'Getting Started', icon: 'üöÄ', description: 'Installation, setup, and VS 2026 overview' },
  { id: 'completions', name: 'Completions', icon: '‚ö°', description: 'AI-powered code suggestions and autocomplete' },
  { id: 'chat', name: 'Chat & Models', icon: 'üí¨', description: 'Chat interface, model selection, custom instructions' },
  { id: 'edits', name: 'Copilot Edits', icon: '‚úèÔ∏è', description: 'Multi-file editing and app building' },
  { id: 'debugging', name: 'Debugging', icon: 'üêõ', description: 'AI-enhanced debugging and exception analysis' },
  { id: 'agent-mode', name: 'Agent Mode', icon: 'ü§ñ', description: 'Autonomous agents and Profiler Agent' },
  { id: 'mcp', name: 'MCP', icon: 'üîå', description: 'Model Context Protocol integration' },
  { id: 'advanced', name: 'Advanced', icon: '‚öôÔ∏è', description: 'Git integration, vision, DevOps, C++' },
];

// Group videos by pillar and sort by order within each pillar
const videosByPillar = pillars.map(pillar => ({
  ...pillar,
  videos: videos
    .filter(v => v.data.pillar === pillar.id)
    .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99))
}));
---

<BaseLayout title="Videos" description="Curated video tutorials for GitHub Copilot organized by enablement pillar">
  <main class="min-h-screen px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <header class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">
          <span class="gradient-text">Learning Paths</span>
        </h1>
        <p class="text-xl text-text-secondary max-w-2xl mx-auto">
          Curated video tutorials from official Microsoft channels, organized as learning paths
        </p>
        <p class="text-sm text-text-muted mt-2">
          {videos.length} videos ‚Ä¢ Follow the numbered order within each pillar
        </p>
      </header>

      <!-- Pillar Navigation -->
      <nav class="flex flex-wrap justify-center gap-2 mb-12">
        {pillars.map(pillar => (
          <a
            href={`#${pillar.id}`}
            class="px-4 py-2 rounded-full border border-border-default text-text-secondary hover:border-accent-cyan hover:text-accent-cyan transition-all text-sm"
          >
            {pillar.icon} {pillar.name}
          </a>
        ))}
      </nav>

      <!-- Video Sections by Pillar -->
      <div class="space-y-16">
        {videosByPillar.filter(p => p.videos.length > 0).map(pillar => (
          <section id={pillar.id}>
            <div class="flex items-center gap-3 mb-6">
              <span class="text-3xl">{pillar.icon}</span>
              <div>
                <h2 class="text-2xl font-heading font-semibold text-text-primary">{pillar.name}</h2>
                <p class="text-sm text-text-muted">{pillar.description}</p>
              </div>
              <span class="ml-auto text-sm text-text-muted bg-bg-overlay px-3 py-1 rounded-full">
                {pillar.videos.length} videos
              </span>
            </div>
            
            <div class="grid gap-4 md:grid-cols-2">
              {pillar.videos.map((video, index) => (
                <a 
                  href={video.data.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block p-5 rounded-xl bg-bg-surface border border-border-default hover:border-accent-cyan transition-all group relative"
                >
                  {video.data.order && (
                    <span class="absolute -top-2 -left-2 w-7 h-7 rounded-full bg-accent-purple text-white text-xs font-bold flex items-center justify-center">
                      {video.data.order}
                    </span>
                  )}
                  <h3 class="font-semibold text-text-primary group-hover:text-accent-cyan transition-colors mb-2 line-clamp-2">
                    {video.data.title}
                  </h3>
                  <p class="text-sm text-text-secondary mb-3 line-clamp-2">{video.data.description}</p>
                  <div class="flex items-center gap-3 text-xs text-text-muted">
                    {video.data.duration && (
                      <span class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        {video.data.duration}
                      </span>
                    )}
                    <span class="flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                      </svg>
                      {video.data.source}
                    </span>
                    <svg class="w-4 h-4 ml-auto text-accent-cyan opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </div>
                </a>
              ))}
            </div>
          </section>
        ))}
      </div>

      <!-- Official Playlists -->
      <section class="mt-16 pt-16 border-t border-border-default">
        <h2 class="text-2xl font-heading font-semibold text-text-primary mb-2 text-center">
          üì∫ Official YouTube Playlists
        </h2>
        <p class="text-sm text-text-muted text-center mb-6">
          Subscribe to these official Microsoft Visual Studio playlists for the latest updates
        </p>
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
          <a
            href="https://www.youtube.com/playlist?list=PLReL099Y5nRcJlI-eUjZJXg4DkRzlnBIF"
            target="_blank"
            rel="noopener noreferrer"
            class="block p-4 rounded-xl border border-border-default bg-bg-overlay hover:border-accent-cyan transition-all text-center group"
          >
            <div class="text-2xl mb-2">üéØ</div>
            <div class="font-semibold text-text-primary group-hover:text-accent-cyan">Get Started Series</div>
            <div class="text-xs text-text-muted">9 videos ‚Ä¢ Beginner</div>
          </a>
          <a
            href="https://www.youtube.com/playlist?list=PLReL099Y5nRfCULHLrLAgly0JF6F5L6S1"
            target="_blank"
            rel="noopener noreferrer"
            class="block p-4 rounded-xl border border-border-default bg-bg-overlay hover:border-accent-cyan transition-all text-center group"
          >
            <div class="text-2xl mb-2">üìö</div>
            <div class="font-semibold text-text-primary group-hover:text-accent-cyan">Getting Started</div>
            <div class="text-xs text-text-muted">5 videos ‚Ä¢ Intermediate</div>
          </a>
          <a
            href="https://www.youtube.com/playlist?list=PLReL099Y5nRftyGRC7xvHZWxlbhbRFP4d"
            target="_blank"
            rel="noopener noreferrer"
            class="block p-4 rounded-xl border border-border-default bg-bg-overlay hover:border-accent-cyan transition-all text-center group"
          >
            <div class="text-2xl mb-2">ü§ñ</div>
            <div class="font-semibold text-text-primary group-hover:text-accent-cyan">Agent Mode Series</div>
            <div class="text-xs text-text-muted">4 videos ‚Ä¢ Advanced</div>
          </a>
          <a
            href="https://www.youtube.com/playlist?list=PLReL099Y5nRcrdj7sPw2ln9VXOmxy2F8P"
            target="_blank"
            rel="noopener noreferrer"
            class="block p-4 rounded-xl border border-border-default bg-bg-overlay hover:border-accent-cyan transition-all text-center group"
          >
            <div class="text-2xl mb-2">üé™</div>
            <div class="font-semibold text-text-primary group-hover:text-accent-cyan">Live! 360 Sessions</div>
            <div class="text-xs text-text-muted">19 videos ‚Ä¢ Deep Dives</div>
          </a>
        </div>
        
        <!-- Official Channels -->
        <h3 class="text-lg font-semibold text-text-primary mt-10 mb-4 text-center">
          Official Channels to Follow
        </h3>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://www.youtube.com/@visualstudio" target="_blank" rel="noopener noreferrer" class="px-4 py-2 rounded-full border border-border-default hover:border-accent-cyan text-sm text-text-secondary hover:text-accent-cyan transition-all">
            @visualstudio (343K subs)
          </a>
          <a href="https://www.youtube.com/@dotnet" target="_blank" rel="noopener noreferrer" class="px-4 py-2 rounded-full border border-border-default hover:border-accent-cyan text-sm text-text-secondary hover:text-accent-cyan transition-all">
            @dotnet (350K subs)
