---

<BaseLayout title="What's New - GitHub Copilot" description="Latest updates and changelog for GitHub Copilot in Visual Studio">
  <main class="min-h-screen py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">
          <span class="gradient-text">What's New</span>
        </h1>
        <p class="text-xl text-text-secondary max-w-2xl mx-auto">
          Track the latest updates and features for GitHub Copilot in Visual Studio
        </p>
      </div>

      <!-- Official Sources -->
      <section class="mb-16">
        <h2 class="text-2xl font-heading font-semibold text-text-primary mb-6">Official Sources</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {officialSources.map((source) => (
            <a
              href={source.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-start gap-4 p-4 rounded-xl border border-border-default bg-bg-overlay hover:border-accent-cyan transition-all"
            >
              <span class="text-2xl">{source.icon}</span>
              <div>
                <h3 class="font-semibold text-text-primary group-hover:text-accent-cyan transition-colors">
                  {source.title}
                </h3>
                <p class="text-sm text-text-muted">{source.description}</p>
              </div>
              <svg class="w-5 h-5 text-text-muted group-hover:text-accent-cyan ml-auto flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          ))}
        </div>
      </section>

      <!-- Changelog Timeline -->
      <section>
        <h2 class="text-2xl font-heading font-semibold text-text-primary mb-6">Changelog Timeline</h2>
        <div class="space-y-6">
          {changelog.map((entry, index) => (
            <div class="relative pl-8 pb-6 border-l-2 border-border-default last:border-transparent">
              <!-- Timeline dot -->
              <div class="absolute left-[-9px] top-0 w-4 h-4 rounded-full bg-accent-cyan border-4 border-bg-void"></div>
              
              <!-- Content -->
              <div class="glass rounded-xl p-6">
                <div class="flex flex-wrap items-center gap-2 mb-3">
                  <span class="text-sm font-semibold text-accent-cyan">{entry.date}</span>
                  <span class="text-text-muted">‚Ä¢</span>
                  <a 
                    href={entry.sourceUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-sm text-text-muted hover:text-accent-cyan transition-colors"
                  >
                    {entry.source} ‚Üó
                  </a>
                </div>
                <h3 class="text-lg font-heading font-semibold text-text-primary mb-3">
                  {entry.title}
                </h3>
                <ul class="space-y-2">
                  {entry.highlights.map((highlight) => (
                    <li class="flex items-start gap-2 text-text-secondary">
                      <span class="text-accent-cyan mt-1">‚Ä¢</span>
                      {highlight}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Call to Action -->
      <section class="mt-16 text-center">
        <div class="glass rounded-xl p-8">
          <h2 class="text-xl font-heading font-semibold text-text-primary mb-4">
            Stay Updated
          </h2>
          <p class="text-text-secondary mb-6">
            Follow the official sources above for the latest updates, or check out our curated video library.
          </p>
          <a
            href={`${base}videos/`}
            class="inline-flex items-center gap-2 px-6 py-3 bg-accent-cyan text-bg-void font-semibold rounded-lg hover:bg-accent-cyan/90 transition-colors"
          >
            Watch Videos
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
