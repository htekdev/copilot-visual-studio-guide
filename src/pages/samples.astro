---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

// External links to official sample resources
const sampleCategories = [
  {
    title: 'Inline Completions',
    description: 'Comment-first patterns, partial accept techniques',
    path: 'https://learn.microsoft.com/visualstudio/ide/visual-studio-github-copilot-extension#code-completions',
    icon: '‚ö°',
    external: true
  },
  {
    title: 'Copilot Chat',
    description: 'Slash commands, context references, agent prompts',
    path: 'https://learn.microsoft.com/visualstudio/ide/copilot-chat-context',
    icon: 'üí¨',
    external: true
  },
  {
    title: 'Agent Mode',
    description: 'Multi-file operations, scaffolding, refactoring',
    path: 'https://learn.microsoft.com/visualstudio/ide/copilot-agent-mode',
    icon: 'ü§ñ',
    external: true
  },
  {
    title: 'Custom Instructions',
    description: 'Project conventions, prompt files, instruction templates',
    path: 'https://learn.microsoft.com/visualstudio/ide/copilot-custom-instructions',
    icon: 'üìù',
    external: true
  }
];
---

<BaseLayout title="Code Samples | Copilot Visual Studio Guide">
  <main class="max-w-5xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-heading font-bold text-center mb-4 gradient-text">Code Samples</h1>
    <p class="text-center text-text-secondary mb-12">Links to official sample documentation and guides</p>
    
    <div class="grid gap-6 md:grid-cols-2">
      {sampleCategories.map(cat => (
        <a 
          href={cat.path}
          target={cat.external ? "_blank" : undefined}
          rel={cat.external ? "noopener noreferrer" : undefined}
          class="block p-6 rounded-xl bg-bg-surface border border-border-default hover:border-accent-cyan transition-all group"
        >
          <div class="flex items-start justify-between">
            <div class="text-4xl mb-4">{cat.icon}</div>
            {cat.external && (
              <svg class="w-4 h-4 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            )}
          </div>
          <h2 class="text-xl font-semibold text-accent-cyan mb-2 group-hover:text-accent-violet transition-colors">{cat.title}</h2>
          <p class="text-text-secondary">{cat.description}</p>
        </a>
      ))}
    </div>

    <!-- Link to local samples directory -->
    <section class="mt-12 p-6 rounded-xl bg-bg-overlay border border-border-default">
      <h2 class="text-xl font-heading font-semibold text-text-primary mb-4">üìÅ Local Samples</h2>
      <p class="text-text-secondary mb-4">
        This repository includes code samples in the <code class="px-2 py-1 bg-bg-surface rounded text-accent-cyan">/samples</code> directory.
      </p>
      <a 
        href="https://github.com/htekdev/copilot-visual-studio-guide/tree/main/samples"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-accent-cyan hover:text-accent-violet transition-colors"
      >
        View on GitHub
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </section>
  </main>
</BaseLayout>
